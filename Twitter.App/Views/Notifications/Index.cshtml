@model IEnumerable<Twitter.App.Models.ViewModels.NotificationViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SendOn)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SendOn)
        </td>
        <td>
            @Html.ActionLink("Details", "Notification", new { id=item.Id }) |
        </td>
    </tr>
}

</table>
