@{
    ViewBag.Title = "All Tweets";
}
@using Twitter.App.Models.ViewModels
@model IEnumerable<TweetIndexViewModel>

@foreach (var tweet in Model){
    <div class="row">
        <div class="col-md-12 thumbnail">
            <div class="caption">
                <h3>@tweet.SendOn</h3>
                <p>@tweet.Content</p>
                @Html.ActionLink("Favourite", "makeFavourite", "Tweets", new { id = tweet.Id }, new { @class = "btn btn-success" })
                @Html.ActionLink("Retweet", "retweet", "Tweets", new { id = tweet.Id }, new { @class = "btn btn-success" })
                @Html.ActionLink("Report", "report", "Tweets", new { id = tweet.Id }, new { @class = "btn btn-danger" })
                @Html.ActionLink("Reply", "reply", "Tweets", new { id = tweet.Id }, new { @class = "btn btn-success" })
                @Html.ActionLink("Share", "share", "Tweets", new { id = tweet.Id }, new { @class = "btn btn-success" })
            </div>
        </div>
    </div>
}
<nav>
    <ul class="pagination">
        @if (ViewBag.page == 1)
        {
            <li class="disabled">@Html.ActionLink("<<", "Index", "Home", new { id = ViewBag.page - 1 }, htmlAttributes: null)</li>
        }
        else
        {
            <li>@Html.ActionLink("<<", "Index", "Home", new { id = ViewBag.page - 1 }, htmlAttributes: null)</li>
        }
        
        @for (int i = 1; i <= ViewBag.pagesCount; i++)
        {
            if (i == ViewBag.page)
            {
                <li class="active">@Html.ActionLink(i.ToString(), "Index", "Home", new { id = i }, htmlAttributes: null)</li>
            }
            else
            {
                <li>@Html.ActionLink(i.ToString(), "Index", "Home", new { id = i }, htmlAttributes: null)</li>
            }
        }
        @if (ViewBag.page == ViewBag.pagesCount)
        {
            <li class="disabled">@Html.ActionLink(">>", "Index", "Home", new { id = ViewBag.page + 1 }, htmlAttributes: null)</li>
        }
        else
        {
            <li>@Html.ActionLink(">>", "Index", "Home", new { id = ViewBag.page + 1 }, htmlAttributes: null)</li>
        }
    </ul>
</nav>